{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <section class="section">
        <h1 class="title has-text-centered is-size-1 mb-5">{{ title }}</h1>
        <h2 class="subtitle has-text-centered mt-5 mb-5">
            Token trading. Future Exchange.
        </h2>

        <div class="columns is-3 mt-5">
            <div class="column has-background-primary-light mr-2">
                <h4 class="has-text-weight-medium mb-2">Traders</h4>
                {% if traders %}
                    <p>
                        {% for trader in traders %}
                            {{ trader.firstName }} {{ trader.lastName }},
                        {% endfor %}
                    </p>
                    <p class="mt-3 has-text-weight-medium">Do you want to trade? - <a href="{{ path('app_register') }}">Register
                            now!</a></p>
                {% else %}
                    <p>No traders. Become the first - <a href="{{ path('app_register') }}">Register</a></p>
                {% endif %}
            </div>
            <div class="column has-background-danger-light mr-2">
                <h4 class="has-text-weight-medium mb-2">Orders</h4>
            </div>
            <div class="column has-background-warning-light mr-2">
                <h4 class="has-text-weight-medium mb-2">Total Futurex Funds</h4>
                {% if currencies %}
                    <ul>
                        {% for key, currency in currencies %}
                            <li>{{ key }}
                                : {{ currency | format_number({grouping_used: 3,decimal_always_shown:true,
                                    fraction_digit: 2}) }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                {% if tokens %}
                    <ul>
                        {% for token in tokens %}
                            <li>{{ token.currency.code }}: {{ token.amount }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}
                {% if currencies is empty and tokens is empty %}
                    <p>No funds. Become the first investor! - <a href="{{ path('app_register') }}">Register now
                            and start trading!</a></p>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}