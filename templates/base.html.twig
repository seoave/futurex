<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{{ title ?: 'Welcome!' }}{% endblock %}</title>
    <link rel="icon" href="{{ asset('assets/images/favicon.ico') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
        <link href="{{ asset('assets/css/fontawesome/css/all.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/bulma.min.css') }}" rel="stylesheet"/>
        <link href="{{ asset('assets/css/custom.css') }}" rel="stylesheet"/>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body>
{% block header %}
    <nav class="navbar main-menu" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="{{ path('app_home') }}">
                <img src="{{ asset('assets/images/logo.png') }}" width="" height="" alt="logo">
                <span class="logo-text is-size-5 has-text-danger-dark has-text-weight-bold is-uppercase
                ml-1">Futurex</span>
            </a>

            <a role="button"
               class="navbar-burger"
               aria-label="menu"
               aria-expanded="false"
               data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item">
                    Home
                </a>

                <a class="navbar-item">
                    Documentation
                </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        More
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item">
                            About
                        </a>
                        <a class="navbar-item">
                            Jobs
                        </a>
                        <a class="navbar-item">
                            Contact
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item">
                            Report an issue
                        </a>
                    </div>
                </div>
            </div>

            <div class="navbar-end">
                {% if app.user %}
                    <div class="navbar-item avatar">
                        <figure class="image is-64x64">
                            <img class="is-rounded" src="https://bulma.io/images/placeholders/128x128.png">
                        </figure>
                    </div>
                    <div class="navbar-item has-dropdown is-hoverable">
                        <a class="navbar-link has-text-weight-medium">
                            Hello {{ app.user.firstName }}
                        </a>

                        <div class="navbar-dropdown">
                            <a href="{{ path('app_trade') }}" class="navbar-item">
                                My orders
                            </a>

                            <a href="{{ path('app_user_wallet') }}" class="navbar-item">
                                My wallet
                            </a>

                            <a href="{{ path('app_user_wallet') }}" class="navbar-item">
                                My orders history
                            </a>
                            <hr class="navbar-divider">
                            <a class="navbar-item">
                                My profile
                            </a>
                        </div>
                    </div>
                {% endif %}
                <div class="navbar-item">
                    <div class="buttons are-small">
                        {% if app.user %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <a class="button is-light" href="{{ path('admin') }}" target="_blank">
                                    Admin
                                </a>
                            {% endif %}
                            <a class="button is-light" href="{{ path('app_logout') }}">
                                Logout
                            </a>
                        {% else %}
                            <a class="button is-primary" href="{{ path('app_register') }}">
                                <strong>Sign up</strong>
                            </a>
                            <a class="button is-light" href="{{ path('app_login') }}">
                                Log in
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </nav>
{% endblock %}
<main class="main-content pt-3 pb-3">
    <div class="container">
        {% block body %}
            <section class="section">
                <h1 class="title has-text-centered">{{ title }}</h1>
                <h2 class="subtitle has-text-centered">
                    Token trading. Future Exchange.
                </h2>
            </section>
        {% endblock %}
    </div>
</main>
<footer class="footer">
    <div class="content has-text-centered">
        <p>&copy; Futurex 2022</p>
    </div>
</footer>
</body>
</html>